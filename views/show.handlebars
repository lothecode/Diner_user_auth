<h1 class="mb-1 restaurant-show-title">{{diner.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{diner.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{diner.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{diner.phone}}
      </p>

      <p class="mb-5">
        {{diner.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src={{diner.image}} alt="{{diner.name}}"
        style="max-width: 600px;">
      <div class="text-right">
        <a href="/diners/{{diner.id}}/edit" class="btn btn-link btn-light">Edit</a>
        <a href="/" class="btn btn-link btn-light">Back</a>
        <button type="submit" class="btn btn-secondary">Delete</button>
      </div>
    </div>
  </div>
</div>